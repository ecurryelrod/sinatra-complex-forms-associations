<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Pet Name:</label>
  <br>
  <input type="text" name="pet[name]" id="pet_name">

  <h3>Select an existing owner or create a new one below.</h3>
  <h4>Existing Owners</h4>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>">
    <%= owner.name %>
    <br>
  <% end %>
  <br>
  <h4>New Owner</h4>
  <label>Owner Name:</label>
  <br>
  <input type="text" name="owner[name]" id="owner_name">
  <br><br>
  <input type="submit" value="Create Pet">
</form>

